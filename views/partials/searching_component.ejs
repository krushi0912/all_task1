<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .container {
            display: flex;
            float: right;
        }

        .container i {
            padding: 10px;
            cursor: pointer;
            border: 2px solid rgb(188, 185, 185);
            border-radius: 10px;
            margin: 5px;
            background-color: rgb(221, 243, 250);
            color: grey;
        }

        .page {
            padding: 10px 14px;
            margin: 5px;
            border: 2px solid rgb(188, 185, 185);
            border-radius: 10px;
        }

        #id {
            border: 1px solid black;
            width: 400px;
            margin: 20px;
            padding: 20px;
            text-align: center;
        }

        #showmore {
            border: 1px solid black;
            width: 600px;
            margin: 20px;
            padding: 20px;
            text-align: center;
            display: none;
        }
    </style>
</head>

<body>
    <form action="/search/searching" method="get">
        <div id="id">
            <label for="id">Id : </label>
            <input type="text" name="id" tabindex="0">
            <input type="submit" value="Go">
        </div>
    </form>
 <button onclick="showmore()">Show More</button> 
    <div id="showmore">
        <form action="/search/searching" method="get">
            firstname: <input type="text" name="firstname">
            Lastname : <input type="text" name="lastname"><br><br>
            gender: <input type="text" name="gender">
            city: <input type="text" name="city"><br><br>
            birth_date: <input type="text" name="birth_date"><br><br>
            <select name="operate" id="operate">
                <option value="and">AND</option>
                <option value="or">OR</option>
            </select>
            <input type="submit" value="check">
        </form>
    </div>

    <div class="container">
        <a href="/search/searching?page=1&firstname=<%=firstname%>&lastname=<%=lastname%>&city=<%=city%>&gender=<%=gender%>&operate=<%=operate%>" <%if(Number(p)==1){%>onclick='return false;' <%}%> ><i
                    class="fa-solid fa-angles-left"></i></a>
        <a href="/search/searching?page=<%=Number(p)-1 %>&firstname=<%=firstname%>&lastname=<%=lastname%>&city=<%=city%>&gender=<%=gender%>&operate=<%=operate%>" <%if(Number(p)==1){%>onclick='return false;' <%}%> ><i class="fa-solid fa-angle-left"></i></a>
        <div class="page">
            <%=p%>
        </div>
        <a href="/search/searching?page=<%=Number(p)+1 %>&firstname=<%=firstname%>&lastname=<%=lastname%>&city=<%=city%>&gender=<%=gender%>&operate=<%=operate%>" <%if(Number(p)==lastpage){%>onclick='return false;' <%}%>><i
                    class="fa-solid fa-angle-right"></i></a>
        <a href="/search/searching?page=<%=lastpage%>&firstname=<%=firstname%>&lastname=<%=lastname%>&city=<%=city%>&gender=<%=gender%>&operate=<%=operate%>" <%if(Number(p)==lastpage){%>onclick='return false;'
            <%}%>><i class="fa-solid fa-angles-right"></i>
        </a>
    </div>

    <script>
        function showmore() {
            var x = document.getElementById("showmore");
            var y = document.getElementById('id');
            console.log(x);
            if (x.style.display === 'none') {
                x.style.display = 'block';
                y.style.display = 'none';
            } else {
                x.style.display = 'none';
                y.style.display = 'block';
            }
        }
    </script>
</body>

</html>